{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always", // ESLint：存檔時修復
    "source.fixAll.stylelint": "always" // Stylelint：存檔時修復
  },
  "editor.formatOnSave": true, // Prettier：存檔時格式化
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Prettier：設為預設格式化器
  "eslint.validate": ["javascript", "typescript", "vue"], // ESLint：驗證檔案類型
  "stylelint.validate": ["css", "scss", "vue"], // Stylelint：驗證檔案類型
  "stylelint.config": null, // Stylelint：使用專案設定
  "stylelint.enable": true,
  "i18n-ally.localesPaths": [
    "i18n/locales"
  ],
  "i18n-ally.keystyle": "flat",
  "i18n-ally.sourceLanguage": "en",
  "i18n-ally.displayLanguage": "zh-tw"
}
